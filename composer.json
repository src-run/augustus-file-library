{
  "name"        : "src-run/augustus-file-library",
  "license"     : "MIT",
  "type"        : "library",
  "homepage"    : "https://src.run/augustus-file-library/home",
  "description" : "implementations on top of SplFileInfo that includes size helpers and temp files with automatic removal on script completion",
  "support" : {
    "email"  : "rmf@src.run",
    "source" : "https://src.run/augustus-file-library/git",
    "issues" : "https://src.run/augustus-file-library/issues"
  },
  "keywords" : [
    "augustus-file-library", "augustus", "file", "library", "rmf", "src-run"
  ],
  "authors" : [
    {
      "name"     : "Rob Frawley 2nd",
      "email"    : "rmf@src.run",
      "homepage" : "https://src.run/rmf",
      "role"     : "Project Lead"
    }
  ],
  "require" : {
    "php"                                : "^5.6 || ^7.0",
    "symfony/finder"                     : "^2.8 || ^3.1",
    "src-run/augustus-exception-library" : "^0.6"
  },
  "require-dev" : {
    "phpunit/phpunit"                     : "^5.0",
    "codacy/coverage"                     : "^1.0",
    "satooshi/php-coveralls"              : "^1.0",
    "src-run/augustus-reflection-library" : "^0.6"
  },
  "autoload" : {
    "psr-4" : {
      "SR\\File\\" : "lib/File",
      "SR\\Path\\" : "lib/Path"
    }
  },
  "autoload-dev" : {
    "psr-4" : {
      "SR\\File\\Tests\\" : "tests/"
    }
  },
  "minimum-stability" : "dev",
  "prefer-stable"     : true,
  "config": {
    "bin-dir" : "bin"
  },
  "extra": {
    "branch-alias": {
      "dev-master" : "0.6-dev"
    }
  }
}
